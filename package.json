{
	"name": "faraday-extension",
	"displayName": "faraday",
	"description": "faraday extension",
	"version": "0.0.5",
	"publisher": "yuxiaormobileteam",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/gfaraday/faraday_extension"
	},
	"icon": "images/icon.png",
	"engines": {
		"vscode": "^1.50.0"
	},
	"categories": [
		"Snippets",
		"Other"
	],
	"activationEvents": [
		"onCommand:faraday.config",
		"onCommand:faraday.generate",
		"workspaceContains:**/.faraday.json"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "faraday.config",
				"title": "Faraday: Configure Route„ÄÅCommon for Flutter Module"
			},
			{
				"command": "faraday.generate",
				"title": "Faraday: Generate Route&Common Method(s) for Swift&Kotlin"
			}
		],
		"snippets": [
			{
				"language": "javascript",
				"path": "./snippets/javascript.json"
			},
			{
				"language": "typescript",
				"path": "./snippets/javascript.json"
			},
			{
				"language": "dart",
				"path": "./snippets/dart.json"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "faraday.generate",
					"group": "7_modification",
					"when": "editorTextFocus"
				}
			]
		},
		"keybindings": [
			{
				"command": "faraday.generate",
				"key": "ctrl+alt+g",
				"when": "editorTextFocus"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.48.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^14.0.27",
		"eslint": "^7.6.0",
		"@typescript-eslint/eslint-plugin": "^3.8.0",
		"@typescript-eslint/parser": "^3.8.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	}
}